<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="leaphly_cart.cart.form.factory.class">Leaphly\Cart\Form\Factory\FormFactory</parameter>
    </parameters>

    <services>
        <!-- Default Cart form types -->
        <service id="leaphly_cart.cart.limited.form.type" class="Leaphly\Cart\Form\Type\LimitedCartFormType">
            <argument>%leaphly_cart.model.cart.class%</argument>
            <tag name="form.type" alias="leaphly_cart_limited" />
        </service>

        <service id="leaphly_cart.cart.form.type" class="Leaphly\Cart\Form\Type\CartFormType">
            <argument>%leaphly_cart.model.cart.class%</argument>
            <tag name="form.type" alias="leaphly_cart" />
        </service>
    </services>
</container>
